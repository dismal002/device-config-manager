        <!-- Apply Button -->
        <Button
            android:id="@+id/applyAllButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply All Policies"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
