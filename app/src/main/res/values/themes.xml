<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DevicePolicyManager" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- AOSP Settings Colors -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/theme_accent</item>
        <item name="colorSecondaryVariant">@color/theme_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/theme_accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
        
        <!-- Disable window action bar to use Toolbar instead -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>

